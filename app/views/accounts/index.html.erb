<table id="accounts_list">
<% @accounts.each do |account| %>
  <tr>
    <td class="label"><%= link_to account.name, account %></td>
    <td class="value"><%= number_to_currency account.balance %></td>
  </tr>
<% end %>
  <tr>
    <td class="label">Total</td>
    <td class="value"><%= number_to_currency @total %></td>
  </tr>
</table>
